@page "/running"

@using MadWorld.Website.Manager.Interfaces;
@inject IRunningManager _manager;

<h1>Running tool!</h1>

<div class="card">
    <div class="card-header">
        <button @onclick=(AddItems)>Add test scheme</button>
        <button @onclick=(AddRun)>Add Run</button>
        <button @onclick=(AddWalk)>Add Walk</button>
        <button @onclick=(Test)>Test Sound</button>
        <button @onclick=(Start)>Start Run</button>
    </div>
    @if (ShowNewRunInputs)
    {
        <div class="card-body">
            <label class="form-label">Type: @RunType</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="duration">Minutes</span>
                <input type="text" class="form-control" aria-label="Minutes" aria-describedby="duration" @bind="DurationMinutes">
            </div>
            <button @onclick=(ConfirmRound)>Confirm this run</button>
        </div>
    }
    @if (RunStarted)
    {
        <div class="card-body">
            <div class="stopwatch">
                <h3>Round: @Round</h3>
                <div class="circle">
                    <span class="time" id="display">@TimeLeft.Hours.ToString("00"):@TimeLeft.Minutes.ToString("00"):@TimeLeft.Seconds.ToString("00")</span>
                </div>
            </div>
        </div>
    }
    <div class="card-body">
        <p>Scheme</p>
        @foreach (var runRound in AllRounds)
        {
            <p>@runRound.Type : @runRound.Duration.Minutes @runRound.Duration.Seconds</p>
        }
    </div>
    <div class="card-body visually-hidden">
        <audio id="@PlayerID" controls><source src="/music/sonar-ping.wav" /></audio>
    </div>
</div>